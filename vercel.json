{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/products",
      "dest": "/index.js"
    },
    {
      "src": "/products/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/users",
      "dest": "/index.js"
    },
    {
      "src": "/users/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/public/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/build/index.html"
    }
  ]
}
